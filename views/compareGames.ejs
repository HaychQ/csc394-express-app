    />

    <!-- OUR CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
    <title>Steam API Dashboard</title>
  </head>
  <body>
    <!-- NAVIGATION MENU -->
    <!-- <nav class="navbar navbar-expand-lg bg-light"> -->
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <!-- <a class="navbar-brand" href="#">Group 4 - Steam API</a> -->
        <span class="group">Group 4 - Steam API</span>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a href="/getFriendsList" class="btn btn-primary nav-btn">Back to Friends List</a>
            </li>
            <li class="nav-item">
              <a href="/" class="btn btn-primary nav-btn">Back To Dashboard</a>
            </li>
            <li class="nav-item">
              <form action="/logout?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-primary nav-btn">Log Out</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1 class="page-header">Compare Games with Friend</h1>
    <div class="compare-games-table-container container">


    <!-- <%= loc = userGames %> -->
    <div class="table-responsive-md center-table-compare fade-in">
      <table class="table table-dark align-middle custom-table">
        <thead>
          <th class="admin-header" scope="col">Game ID</th>
          <th class="admin-header compare-name" scope="col">Game Name</th>
          <th class="admin-header" scope="col">PlayTime</th>
          <th class="admin-header" scope="col">Game Icon</th>
        </thead>
        <% for(var i=0; i < sharedGames.length; i++) { %>          
          <tr class="row-hover-admin" style="color:green">
            <td class="table-element"><%= sharedGames[i].appid %></td>
            <td class="table-element compare-name"><%= sharedGames[i].name %></td>
            <td  class="table-element"><%= sharedGames[i].playtime_forever %></td>
            <td class="table-dark">
              <img src=<%= `http://media.steampowered.com/steamcommunity/public/images/apps/${sharedGames[i].appid}/${sharedGames[i].img_icon_url}.jpg` %> class="game-icon">
              </img>
            </td>
          </tr>
          <% } %>  
        <% for(var i=0; i < userGames.length; i++) { %>
        <tr class="row-hover-admin">
          <td class="table-element"><%= userGames[i].appid %></td>
          <td class="table-element compare-name"><%= userGames[i].name %></td>
          <td  class="table-element"><%= userGames[i].playtime_forever %></td>
          <td class="table-dark">
            <img src=<%= `http://media.steampowered.com/steamcommunity/public/images/apps/${userGames[i].appid}/${userGames[i].img_icon_url}.jpg` %> class="game-icon">
            </img>
          </td>
        </tr>
        <% } %>
      </table>
    <!-- </table> -->
    </div>

    <div class="table-responsive-md center-table-compare fade-in">
    <!-- FRIENDS COMPARE -->
    <table class="table table-dark align-middle custom-table">
        <thead>
          <th class="admin-header" scope="col">Game ID</th>
          <th class="admin-header compare-name" scope="col">Game Name</th>
          <th class="admin-header" scope="col">PlayTime</th>
          <th class="admin-header" scope="col">Game Icon</th>
        </thead>
        <% for(var i=0; i < sharedGames.length; i++) { %>          
          <tr class="row-hover-admin" style="color:green">
            <td class="table-element"><%= sharedGames[i].appid %></td>
            <td class="table-element compare-name"><%= sharedGames[i].name %></td>
            <td  class="table-element"><%= sharedGames[i].playtime_forever %></td>
            <td class="table-dark">
              <img src=<%= `http://media.steampowered.com/steamcommunity/public/images/apps/${sharedGames[i].appid}/${sharedGames[i].img_icon_url}.jpg` %> class="game-icon">
              </img>
            </td>
          </tr>
          <% } %>  
        <% for(var i=0; i < friendGames.length; i++) { %>
        <tr class="row-hover-admin">
          <td class="table-element"><%= friendGames[i].appid %></td>
          <td class="table-element compare-name"><%= friendGames[i].name %></td>
          <td class="table-element compare-playtime"><%= friendGames[i].playtime_forever %></td>
          <!-- <td><%= friendGames[i].img_icon_url %></td> -->
          <td class="table-dark">
            <img src=<%= `http://media.steampowered.com/steamcommunity/public/images/apps/${friendGames[i].appid}/${friendGames[i].img_icon_url}.jpg` %> class="game-icon">
            </img>
          </td>
        </tr>
        <% } %>
      </table>
    <!-- </table> -->

  </div>
</div>

