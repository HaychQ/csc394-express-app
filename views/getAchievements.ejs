<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;700&display=swap" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500&display=swap" rel="stylesheet" />

    <!-- BOOTSTRAP CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <!-- OUR CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
    <title>Steam API Dashboard</title>
  </head>
  <body>
    <!-- NAVIGATION MENU -->
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <span class="group">Group 4 - Steam API</span>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a href="/getFriendsList" class="btn btn-primary nav-btn">Back to Friends List</a>
            </li>
            <li class="nav-item">
              <a href="/" class="btn btn-primary nav-btn">Back To Dashboard</a>
            </li>
            <li class="nav-item">
              <form action="/logout?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-primary nav-btn">Log Out</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1 class="page-header">View My Achievements For: <%= game_name %></h1>
    <div class="container achievements-container">
      <div class="table-responsive-md center-table-compare fade-in">
        <table class="table table-dark align-middle custom-table">
          <thead class="table-dark">
            <th class="admin-header" scope="col">Achievement Name</th>
            <th class="admin-header compare-name" scope="col">Achievement Status</th>
            <th class="admin-header admin-achievement" scope="col">Achievement Date</th>
          </thead>
          <% for(var i=0; i < achievement_list.length; i++) { %>
          <tr class="row-hover-admin">
            <td class="table-element"><%= achievement_list[i].apiname %></td>
            <td class="table-element">
              <% if(achievement_list[i].achieved == 1){ %>
              <h1 class="achievement-text">Achieved</h1>
              <% } else{ %>
              <h1 class="achievement-text">In Progress</h1>
              <% } %>
            </td>

            <!-- <td>
              <%= new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: '2-digit'}).format(new
              Date(achievement_list[i].unlocktime)) %>
            </td> -->

            <td>
              <%= new Intl.DateTimeFormat('en-US', { year: 'numeric', month: 'long', day: '2-digit'}).format(new
              Date(achievement_list[i].unlocktime)) %>
            </td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>

    <!-- BOOTSTRAP JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>

    <!-- OUR JS FILE -->
    <script src="./javascripts/script.js"></script>
  </body>
</html>
