<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;700&display=swap" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500&display=swap" rel="stylesheet" />

    <!-- BOOTSTRAP CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <!-- OUR CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />

    <title>Get Owned Games</title>
  </head>
  <body>
    <!-- NAVIGATION MENU -->
    <!-- <nav class="navbar navbar-expand-lg bg-light"> -->
     
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <!-- <a class="navbar-brand" href="#">Group 4 - Steam API</a> -->
        <span class="group">Group 4 - Steam API</span>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- <li class="nav-item">
              <a href="/getnews" class="btn btn-primary nav-btn">Game News</a>
            </li>
            <li class="nav-item">
              <a href="/admin" class="btn btn-primary nav-btn">Admin Portal</a>
            </li> -->
            <li class="nav-item">
              <a href="/" class="btn btn-primary nav-btn">Go Back To Dashboard</a>
            </li>
            <li class="nav-item">
              <form action="/logout?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-primary nav-btn">Log Out</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <h1 class="page-header">Get Owned Games</h1>
    <!-- <%= loc = JSON.parse(stringGameData) %> -->
    <div class="table-responsive-xxl center-table  fade-in">
      <table class="table table-hover align-middle custom-table">
        <thead>
          <th class="table-header table-dark">Game Name</th>
          <th class="table-header table-dark">Game Id</th>
          <th class="table-header table-dark">Game Icon</th>
        </thead>
        <% for(var i=0; i < loc.length; i++) { %>
        <tr>
          <td class="api-text table-dark"><%= loc[i].name %></td>
          <td class="api-text table-dark"><%= loc[i].appid %></td>
          <td class="admin-actions">
            <!-- <a href="#" type="button" class="btn btn-outline btn-small action-btn"><i class="bi bi-eye"></i> View</a> -->
            <a
              href="/getAchievements/<%= loc[i].appid %>"
              type="button"
              class="btn btn-outline btn-small action-btn"
              title="Got to Game Achievements"
              ><i class="bi bi-pencil"></i> Achievements</a
            >
          <td class="table-dark">
            <img src=<%= `http://media.steampowered.com/steamcommunity/public/images/apps/${loc[i].appid}/${loc[i].img_icon_url}.jpg` %> class="game-icon">
            </img>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>

