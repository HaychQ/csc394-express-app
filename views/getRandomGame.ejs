  <body>
    <!-- <nav class="navbar navbar-expand-lg bg-light"> -->
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <!-- <a class="navbar-brand" href="#">Group 4 - Steam API</a> -->
          <span class="group">Group 4 - Steam API</span>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a href="/" class="btn btn-primary nav-btn">Back To Dashboard</a>
              </li>
              <li class="nav-item">
                <form action="/logout?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-primary nav-btn">Log Out</button>
                </form>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <h1 class="page-header">Random Game Page</h1>

    <!-- <div class="page-container"> -->
    <!-- <div class="animated game-news-container"> -->
    <div class="random-game-container fade-in">
      <!-- <span><%= SteamStoreGameData %></span> -->
      <span><img src=<%= `${SteamStoreGameData.header_image}` %> class="game-icon random-game-img">
      </img>
      </span>
      <div class="random-game-text-container">
        <span class="random-game-name"><%= SteamStoreGameData.name %></span>
        <div class="random-game-playtime-container">
          <h1>Playtime: </h1>
          <span class="random-game-playtime"><%= randomGameReturn.playtime_forever %> Mins.</span>
        </div>
        <div class="random-game-genre-container">
        <h1>Genre:</h1>
        <% for(var i=0; i < SteamStoreGameData.genres.length; i++) { %>
        <span class="random-game-genre"><%= SteamStoreGameData.genres[i].description %></span>
        <% } %>
        </div>
      </div>
    </div>
