<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
  crossorigin="anonymous"
/>
<link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />

<div class="login-container">
  <div class="modal-content">
    <div class="modal-header">
      <span class="modal-title">LOGIN ACCOUNT</span>
    </div>
    <div class="modal-body">
      <div class="contact-form">

        <% if (message.length > 0) { %>
          <div class = "alert alert-success" role="alert">
            <%= message %>
          </div>
       <% } %>
       
        <form class="login-form" action="/login" method="POST">
          <div class="row">
            <!-- USERNAME -->
            <div class="col col-md-12">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" placeholder="Email" class="form-control modal-textbox" required />
            </div>
            <!-- PASSWORD -->
            <div class="col col-md-12">
              <label for="password">Password:</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                class="form-control modal-textbox"
                required
              />
            </div>
          </div>
          <div class="modal-btns-container-login">
            <!-- <a class="modal-btn-secondary" href="/login">Login</a> -->
            <a href="/register" class="modal-btn-secondary">Register</a> -->
            <button type="submit" class="modal-btn">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
