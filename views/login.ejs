<link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />

<div class="login-container">
  <div class="modal-content">
    <div class="modal-header">
      <span class="modal-title">LOGIN ACCOUNT</span>
    </div>
    <div class="modal-body">
      <div class="contact-form">
        <!-- <form action="php/action.php" method="POST" class="create-account-form" id="createAccountForm"> -->
          <ul>
            <% if(messages.success_msg) { %>
            <li><%= messages.success_msg %></li>
            <% } %>
          </ul>

          <ul>
            <% if (messages.error) { %>
            <li><%= messages.error %></li>
            <% } %>
          </ul>
          
        <form class="login-form" action="/login" method="POST">
          <div class="row">
            <!-- USERNAME -->
            <div class="col col-md-12">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" placeholder="Email" class="form-control modal-textbox" required />
            </div>
            <!-- PASSWORD -->
            <div class="col col-md-12">
              <label for="password">Password:</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                class="form-control modal-textbox"
                required
              />
            </div>
            <!-- SteamId -->
            <!-- <div class="col col-md-12">
              <label for="steamid">Steam Id:</label>
              <input
                type="text"
                id="createSteamId"
                name="steamid"
                placeholder="Steam ID(optional)"
                class="form-control modal-textbox"
              />
            </div> -->
            <!-- API KEY -->
            <!-- <div class="col col-md-12">
              <label for="apikey">API Key:</label>
              <input type="text" name="apikey" class="form-control modal-textbox" placeholder="API Key(optional)" id="apikey" />
            </div> -->
          </div>
          <div class="modal-btns-container-login">
            <!-- <a class="modal-btn-secondary" href="/login">Login</a> -->
            <a href="/register" class="modal-btn-secondary">Register</a> -->
            <button type="submit" class="modal-btn">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
