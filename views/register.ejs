<!-- test -->
<div class="register-container">
  <div class="modal-content">
    <div class="modal-header">
      <span class="modal-title">CREATE ACCOUNT</span>
    </div>
    <div class="modal-body">
      <div class="contact-form">
        <!-- <form action="php/action.php" method="POST" class="create-account-form" id="createAccountForm"> -->
        <ul>
          <% if(typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
          <li><%= error.message %></li>
          <% }) %> <% } %>
        </ul>
        <form class="spacing" action="/register" method="POST">
          <div class="row">
            <!-- USERNAME -->
            <div class="col col-md-12">
              <label for="email">Email:</label>
              <input type="email" id="email" name="email" placeholder="Email" class="form-control modal-textbox" required />
            </div>
            <!-- PASSWORD -->
            <div class="col col-md-12">
              <label for="password">Password:</label>
              <input type="password" id="password" name="password" placeholder="Password" class="form-control modal-textbox" />
            </div>
            <!-- SteamId -->
            <div class="col col-md-12">
              <label for="steamid">Steam Id:</label>
              <input
                type="text"
                id="createSteamId"
                name="steamid"
                placeholder="Steam ID"
                class="form-control modal-textbox"
                required
              />
            </div>
            <!-- API KEY -->
            <div class="col col-md-12">
              <label for="apikey">API Key:</label>
              <input type="text" name="apikey" class="form-control modal-textbox" placeholder="API Key" id="apikey" required />
            </div>
          </div>
          <div class="modal-btns-container">
            <a class="modal-btn-secondary" href="/login">Login</a>
            <button type="submit" class="modal-btn">Create Account</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
